{
  "name": "Awaiter",
  "version": "1.0",
  "description": "Awaiter extension",
  "permissions": ["storage"],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "ressources/logo16.png",
      "32": "ressources/logo32.png",
      "48": "ressources/logo48.png",
      "128": "ressources/logo128.png"
    }
  },
  "icons": {
    "16": "ressources/logo16.png",
    "32": "ressources/logo32.png",
    "48": "ressources/logo48.png",
    "128": "ressources/logo128.png"
  },
  "manifest_version": 2
}